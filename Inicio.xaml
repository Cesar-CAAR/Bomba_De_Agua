<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bomba_De_Agua.Inicio"
             Title="Inicio">

    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="Inicio"
                   FontSize="30"
                   Margin="0,15,0,0"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"/>

            <Label Text="Bomba de agua"
                   Margin="15,30,0,0"
                   FontSize="20"
                   FontAttributes="Bold"/>

            <Button Text="Apagar"
                    BackgroundColor="Red"
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="16"
                    WidthRequest="100"
                    Margin="0,10,225,0"/>

            <Label Text="Temporizador"
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="15,50,0,0"
                   TextColor="Black"
                   />


            <!-- Temporizador -->
            <Frame CornerRadius="5"
                   Padding="9"
                   BorderColor="Black"
                   BackgroundColor="White"
                   HorizontalOptions="Start"
                   Margin="25,10,0,0"
                   WidthRequest="120"
                   HeightRequest="50">
                

                <Label Text="00:00:00"
                       FontSize="19"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center" />

            </Frame>

            <Label Text="Modificar el tiempo del temporizador"
                   Margin="15,50,0,0"
                   FontSize="20"
                   FontAttributes="Bold"/>

            <Button Text="Modificar"
                    BackgroundColor="#ffc957"
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="16"
                    WidthRequest="100"
                    Margin="0,10,225,0"/>


            <!-- Esta es una linea divisora de color negro -->
            <BoxView WidthRequest="350" 
                     Margin="0,40,0,0" 
                     HeightRequest="1.5" 
                     Color="Black" />

            <Label Text="Monitoreo en tiempo real"
                   HorizontalTextAlignment="Center"
                   Margin="0,25,0,0"
                   FontSize="20"
                   FontAttributes="Bold"/>

            <Label Text="Litros de agua restante"
                   FontSize="16"
                   FontAttributes="Bold"
                   Margin="15,40,0,0"/>


            <HorizontalStackLayout HorizontalOptions="Start" Margin="45,20,0,0">
                <!-- Contador de litros de agua -->
                <Frame CornerRadius="5"
                       Padding="9"
                       BorderColor="Black"
                       BackgroundColor="White"
                       WidthRequest="120"
                       HeightRequest="50">

                    <Label Text="0,000"
                           FontSize="19"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center" />
                    
                </Frame>

                <!-- Indicador de estado "Vacío" -->
                <Frame CornerRadius="10"
                       Padding="9"
                       BackgroundColor="Red"
                       WidthRequest="80"
                       HeightRequest="50"
                       Margin="80,0,0,0">

                    <Label Text="Vacío"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="Black"
                           HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center" />
                </Frame>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>